#!/usr/bin/env bash
set -euo pipefail

{{- if eq .chezmoi.os "darwin" }}

# Ensure Homebrew is installed
if ! command -v brew >/dev/null 2>&1; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

echo 'eval "$(/opt/homebrew/bin/brew shellenv)"' >> ~/.zprofile
eval "$(/opt/homebrew/bin/brew shellenv)"
brew update

{{- if and (hasKey . "packages") (hasKey .packages "darwin") (hasKey .packages.darwin "brew") }}
echo "[chezmoi] Installing brew packages: {{ join " " .packages.darwin.brew }}"
brew install{{ range .packages.darwin.brew }} {{ . }}{{ end }} || true
{{- end }}

{{- if and (hasKey . "packages") (hasKey .packages "darwin") (hasKey .packages.darwin "casks") }}
echo "[chezmoi] Installing brew casks: {{ join " " .packages.darwin.casks }}"
brew install --cask{{ range .packages.darwin.casks }} {{ . }}{{ end }} || true
{{- end }}

# Install tmux plugins
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm || true
~/.tmux/plugins/tpm/bin/install_plugins

# Install oh-my-zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" || true

# Install fzf-tab
git clone https://github.com/Aloxaf/fzf-tab ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/fzf-tab

# Install programming language environments
mise install

{{- else }}
echo "[chezmoi] Skipping Darwin installer, this is {{ .chezmoi.os }}"
{{- end }}
