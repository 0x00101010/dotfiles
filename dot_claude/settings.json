{
  "alwaysThinkingEnabled": false,
  "permissions": {
    "allow": [
      // Web search
      "WebFetch(**)",

      // Allow frequently used bash commands
      "Bash(make*)",
      "Bash(ls*)",
      "Bash(cat*)",
      "Bash(less*)",
      "Bash(head*)",
      "Bash(tail*)",
      "Bash(more*)",
      "Bash(ping*)",
      "Bash(curl*)",
      "Bash(ifconfig*)",
      "Bash(ip*)",
      "Bash(pwd*)",
      "Bash(tree*)",
      "Bash(awk*)",
      "Bash(sed*)",
      "Bash(cut*)",
      "Bash(sort*)",
      "Bash(uniq*)",
      "Bash(diff*)",
      "Bash(file*)",
      "Bash(stat*)",
      "Bash(wc*)",
      "Bash(du*)",
      "Bash(df*)",
      "Bash(grep*)",
      "Bash(find*)",
      "Bash(locate*)",
      "Bash(which*)",
      "Bash(whereis*)",

      // Allow rust / cargo
      "Bash(cargo*)",

      // Allow git read related commands
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git show*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git remote*)",
      "Bash(git tag*)",
      "Bash(git ls-files*)",
      "Bash(git ls-tree*)",
      "Bash(git ls-remote*)",
      "Bash(git reflog*)",
      "Bash(git rev-parse*)",
      "Bash(git rev-list*)",
      "Bash(git describe*)",
      "Bash(git cat-file*)",
      "Bash(git blame*)",
      "Bash(git grep*)",
      "Bash(git config --get*)",
      "Bash(git config --list*)",
      "Bash(git config -l*)",
      "Bash(git shortlog*)",
      "Bash(git count-objects*)",
      "Bash(git fsck*)",
      "Bash(git verify-*)",

      // gh related commands
      "Bash(gh project:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",

      // File system access
      "Read(//private/tmp/**)",
      "Read(//tmp/**)",
      "Read(/home/**/src/**)"
    ],
    "deny": ["Read(.env*)", "Read(**/secrets/**)", "Read(**/*.key)"]
  }
}
