# This is Git's per-user configuration file.
[core]
	pager = delta
[interactive]
	diffFilter = delta
[delta]
	navigate = true
[merge]
    conflictStyle = zdiff3
[user]
	name = {{ .fullName }}
	email = {{ .email }}
	signingkey = {{ .signingkey }}
[pull]
	ff = only
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[http]
	sslVerify = true
[commit]
	gpgsign = true
[gpg]
	program = {{ output "which" "gpg" | trim }}